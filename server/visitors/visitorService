const pool = require('../db');

const addVisitor = async (body) => {
    // add visitor details to visits table in db
    try {
        await pool.query(
            `INSERT INTO visitors (name, phone, email, company, purpose, host_id)
            VALUES ($1, $2, $3, $4, $5, $6)`, 
            [body.name, body.phone, body.email, body.company, body.purpose, body.host_id]
        )
    } catch (error) {
        console.error(error.message);
    }
}

